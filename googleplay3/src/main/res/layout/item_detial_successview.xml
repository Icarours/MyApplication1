<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <!--应用的下载部分-->
    <FrameLayout android:id="@+id/detail_fl_download"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:background="@drawable/detail_bottom_bg">
    </FrameLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/detail_fl_download">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <!--应用的信息部分-->
            <FrameLayout android:id="@+id/detail_fl_info"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

            </FrameLayout>
            <!--应用的安全部分-->
            <FrameLayout android:id="@+id/detail_fl_safe"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="5dp"
                         android:background="#fff">

            </FrameLayout>
            <!--应用的图片部分-->
            <FrameLayout android:id="@+id/detail_fl_pic"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

            </FrameLayout>
            <!--应用的描述部分-->
            <FrameLayout android:id="@+id/detail_fl_dec"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>